{% extends 'base.html.twig' %}

{% block title %}Liste des fichiers{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1 class="mb-4 text-primary fw-bold">üìÅ Liste des fichiers</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Tous les fichiers enregistr√©s</h5>
        </div>

        <div class="card-body p-0">
            {% if fichiers is empty %}
                <div class="p-4 text-center text-muted">
                    Aucun fichier enregistr√©.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Fichier</th>
                                <th>Extension</th>
                                <th>Taille</th>
                                <th>Date d'envoi</th>
                                <th>Utilisateur</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for f in fichiers %}
                                <tr>
                                    <td>{{ f.id }}</td>

                                    <td>
                                        <legend class="m-0 p-0">
                                            <i class="bi bi-file-earmark-arrow-down text-primary"></i>

                                            <a href="{{ path('app_telechargement_fichier', {'id': f.id}) }}"
                                               class="btn btn-sm btn-outline-primary ms-2">
                                                T√©l√©charger : <strong>{{ f.nomOriginal }}</strong>
                                            </a>
                                        </legend>
                                    </td>

                                    <td>{{ f.extension }}</td>
                                    <td>{{ (f.taille / 1024)|number_format(1) }} Ko</td>
                                    <td>{{ f.dateEnvoi|date('d/m/Y H:i') }}</td>

                                    <td>
                                        {% if f.user %}
                                            <strong>{{ f.user.lastname }}</strong>
                                            {{ f.user.firstname }}
                                        {% else %}
                                            <span class="text-muted">Aucun</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.08) !important;
        transition: 0.2s ease;
    }
</style>
{% endblock %}
