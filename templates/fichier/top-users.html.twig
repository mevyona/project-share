{% extends 'base.html.twig' %}

{% block title %}Top utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1 class="mb-4 text-primary fw-bold">üèÜ Top utilisateurs ‚Äî Envois de fichiers</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Classement des utilisateurs</h5>
        </div>

        <div class="card-body p-0">
            {% if topUsers is empty %}
                <div class="p-4 text-center text-muted">Aucun envoi enregistr√©.</div>
            {% else %}
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Utilisateur</th>
                            <th>Nombre de fichiers</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in topUsers %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>
                                    <strong>{{ user.lastname }}</strong> {{ user.firstname }}
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ user.fileCount }}</span>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>

</div>
{% endblock %}
