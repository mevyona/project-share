<div class="notification-bell-container">
	<button type="button" class="notification-bell" id="notificationBell" aria-label="Notifications">
		<svg width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
			<path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
			<path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
		</svg>
		<span class="notification-badge" id="notificationBadge" style="display: none;">0</span>
	</button>

	<div class="notification-dropdown" id="notificationDropdown" style="display: none;">
		<div class="notification-dropdown-header">
			<h3>Notifications</h3>
			<span class="notification-dropdown-count" id="dropdownCount">0</span>
			<button type="button" class="btn-mark-all-read-dropdown" id="markAllReadBtn" style="display: none;">
				Tout marquer comme lu
			</button>
		</div>

		<div class="notification-dropdown-list" id="notificationList">
			<div class="notifications-empty">
				<p>Aucune notification</p>
			</div>
		</div>

		<div class="notification-dropdown-footer">
			<a href="{{ path('app_notification_panel') }}">Voir toutes les notifications</a>
		</div>
	</div>
</div>
