{% extends 'base.html.twig' %}

{% block title %}Historique de
	{{ user.firstname }}
	{{ user.lastname }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Historique de
			{{ user.firstname }}
			{{ user.lastname }}</h1>

		<div class="mb-3">
			<a href="{{ path('admin_user_index') }}" class="btn btn-secondary">Retour à la liste des utilisateurs</a>
			<a href="{{ path('admin_user_audit') }}" class="btn btn-secondary">Voir le journal d'audit</a>
		</div>

		<div class="card mb-4">
			<div class="card-header">
				<h5>Informations de l'utilisateur</h5>
			</div>
			<div class="card-body">
				<p>
					<strong>Email:</strong>
					{{ user.email }}</p>
				<p>
					<strong>Nom:</strong>
					{{ user.firstname }}
					{{ user.lastname }}</p>
				<p>
					<strong>Adresse:</strong>
					{{ user.adresse }},
					{{ user.codePostal }}
					{{ user.ville }}</p>
				<p>
					<strong>Statut:</strong>
					{% if user.isSuspended %}
						<span class="badge bg-danger">Suspendu</span>
					{% else %}
						<span class="badge bg-success">Actif</span>
					{% endif %}
				</p>
			</div>
		</div>

		<h3>Historique des activités</h3>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Date et heure</th>
					<th>Action</th>
					<th>Adresse IP</th>
				</tr>
			</thead>
			<tbody>
				{% for log in logs %}
					<tr>
						<td>{{ log.createdAt|date('d/m/Y H:i:s') }}</td>
						<td>
							{% if log.action == 'login' %}
								<span class="badge bg-primary">Connexion</span>
							{% elseif log.action == 'registration' %}
								<span class="badge bg-success">Inscription</span>
							{% else %}
								<span class="badge bg-secondary">{{ log.action }}</span>
							{% endif %}
						</td>
						<td>{{ log.ipAddress ?? 'N/A' }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3" class="text-center">Aucun historique disponible pour cet utilisateur</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
