{% extends 'base.html.twig' %}

{% block title %}Historique des connexions et inscriptions
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Historique des connexions et inscriptions</h1>

		<div class="mb-3">
			<a href="{{ path('admin_user_index') }}" class="btn btn-secondary">Retour Ã  la liste des utilisateurs</a>
		</div>

		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Date et heure</th>
					<th>Utilisateur</th>
					<th>Email</th>
					<th>Action</th>
					<th>Adresse IP</th>
				</tr>
			</thead>
			<tbody>
				{% for log in logs %}
					<tr>
						<td>{{ log.createdAt|date('d/m/Y H:i:s') }}</td>
						<td>{{ log.user.firstname }}
							{{ log.user.lastname }}</td>
						<td>{{ log.user.email }}</td>
						<td>
							{% if log.action == 'login' %}
								<span class="badge bg-primary">Connexion</span>
							{% elseif log.action == 'registration' %}
								<span class="badge bg-success">Inscription</span>
							{% else %}
								<span class="badge bg-secondary">{{ log.action }}</span>
							{% endif %}
						</td>
						<td>{{ log.ipAddress ?? 'N/A' }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5" class="text-center">Aucun historique disponible</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
